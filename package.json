{
  "name": "nexti-backend",
  "version": "1.0.0",
  "description": "Backend para sistema de tickets usando Fastify, TypeScript e Prisma",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only ./src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "postinstall": "prisma generate",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f postgres",
    "docker:with-tools": "docker-compose --profile tools up -d",
    "docker:reset": "docker-compose down -v && docker-compose up -d"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  },
  "keywords": [
    "fastify",
    "typescript",
    "prisma",
    "postgresql",
    "tickets"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^8.4.2",
    "fastify": "^4.24.3",
    "zod": "^3.22.4",
    "@prisma/client": "^5.7.1",
    "dotenv": "^16.3.1",
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "prisma": "^5.7.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}