{
  "name": "nexti-backend",
  "version": "1.0.0",
  "description": "Backend para sistema de tickets usando Fastify, TypeScript e Prisma",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register ./src/index.ts",
    "build": "prisma generate && prisma db push --accept-data-loss && tsc && tsc-alias",
    "start": "node dist/index.js",
    "postinstall": "prisma generate",
    "migrate": "prisma migrate deploy",
    "migrate:dev": "prisma migrate dev",
    "migrate:reset": "prisma migrate reset",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:push": "prisma db push",
    "db:pull": "prisma db pull",
    "test:db": "prisma db pull && echo 'Tabelas sincronizadas com sucesso!'",
    "test:db:schema": "ts-node src/test-db-schema.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f postgres",
    "docker:with-tools": "docker-compose --profile tools up -d",
    "docker:reset": "docker-compose down -v && docker-compose up -d",
    "render:build": "echo 'ðŸš€ Build Render...' && npm install && prisma generate && prisma db push --accept-data-loss && tsc && tsc-alias && echo 'âœ… ConcluÃ­do!'",
    "emergency:build": "npm install && prisma generate && npx tsc && npx tsc-alias",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "fastify",
    "typescript",
    "prisma",
    "postgresql",
    "tickets",
    "api",
    "backend"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^8.4.2",
    "@prisma/client": "^6.13.0",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "pino-pretty": "^13.1.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "prisma": "^6.13.0",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}